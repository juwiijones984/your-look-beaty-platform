rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Services - providers can manage their own, customers can read published
    match /services/{serviceId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        request.auth.uid == resource.data.providerId;
    }

    // Products - providers can manage their own, customers can read
    match /products/{productId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        request.auth.uid == resource.data.providerId;
    }

    // Bookings - customers and providers can read/write their own
    match /bookings/{bookingId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.customerId ||
         request.auth.uid == resource.data.providerId);
      allow create: if request.auth != null && request.auth.uid == resource.data.customerId;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.customerId ||
         request.auth.uid == resource.data.providerId);
    }

    // Emergency incidents - responders and admins can read/write, users can create their own
    match /emergencyIncidents/{incidentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update: if request.auth != null; // Allow responders to update status
    }

    // Orders - customers can manage their own
    match /orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.customerId;
    }

    // Payments - customers can read their own
    match /payments/{paymentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.customerId;
    }

    // Loyalty conversions - customers can read their own
    match /loyaltyConversions/{conversionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.customerId;
    }

    // Broadcasts - all authenticated users can read
    match /broadcasts/{broadcastId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}